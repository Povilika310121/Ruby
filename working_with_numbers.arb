# Сумма цифр числа
def num_sum (n)
    return n.digits.sum # 12345.digits  => [5, 4, 3, 2, 1]
end

# Максимальная цифра числа
def m_ax(n)
    return n.digits.max
end

# Минимальная цифра числа
def m_in(n)
    return n.digits.min
end

# Произведение цифр числа
def m_ult(n)
    res = 1
    lst = n.digits
    for el in lst
        res = res * el
    end
    return res
end

#Метод 1. Найти сумму простых делителей числа.

def prost(x)
    for i in 2..x/2
        if x%i==0
            return false
        end
    end
    return true
end

def sum_prost(x)
    sum = 0
    for i in 2..x/2
        if x%i==0 && prost(i)
            sum+=i
        end
    end
    return sum
end

