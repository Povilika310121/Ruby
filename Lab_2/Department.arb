class Department
    
    attr_accessor :name, :phone_number #attr_accessor геттер и сеттор одновременно

    def initialize(name, phone_number)
        @name, @phone_number = name, phone_number
    end

    def to_s
        "Name: #{name}\nPhone: #{phone_number};\n"
      end
end

vika = Department.new('Vika', '+79010134231')
danna = Department.new("Danna", "+79009053535")
